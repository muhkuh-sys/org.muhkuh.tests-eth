top = "."
out = "build"
APPNAME = "eth2ps"

def build(bld):
    
    use_toolchain = "gccarmemb"
    
    # -----------------------------------------------------------------
    # NXHX Application
    
    bld.program(
        target          = APPNAME + "_nxio100",
        name            = APPNAME + "_nxio100_elf",
        platform        = "netx100",
        toolchain       = use_toolchain,
        description     = "ETH2PS Demo Application NXIO100",
        source_arm      = ["../../Init/init_netx100.S",
                           "../Sources/main.c",
                           "../Sources/irq.c",
                          ],
        use             = ["eth2ps",
                           "hal_eth2ps_netx100",
                           "targetlib_nxio100re",
                          ],
        linkerscript    = "../../Linker/netx100.ld",
        displaygroup    = APPNAME,
    )
    
    bld.bootimage(
        target           = "netx.rom",
        name             = APPNAME + "_nxio100",
        use              = APPNAME + "_nxio100_elf",
        description      = "ETH2PS Demo MMC Image NXIO100",
        BOOTBLOCKERFLAGS = ["-ct netx500",
                            "-s", "MMC",
                            "-d", "SD_MT48LC2M32B2",
                           ],
        displaygroup    = APPNAME,
    )
    