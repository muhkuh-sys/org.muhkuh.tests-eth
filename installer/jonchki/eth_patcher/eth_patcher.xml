		<author name="Muhkuh Team" url="https://github.com/muhkuh-sys" />
		<description>A patcher for ETH standalone images.</description>
	</info>
	<dependencies>
		<dependency group="org.lua" module="lua" artifact="lua" version="5.4"/>
		<dependency group="com.github.lunarmodules" module="Penlight" artifact="Penlight" version="1"/>
		<dependency group="com.github.moteus" module="lua-log" artifact="lua-log" version="0.1"/>
		<dependency group="com.github.mpeterv" module="argparse" artifact="argparse" version="0"/>
		<dependency group="com.github.toxicfrog" module="vstruct" artifact="vstruct" version="2"/>
